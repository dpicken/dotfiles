#!/bin/bash

set -euo pipefail

if [ $# -eq 1 ] && [ "$1" = "--help" ]; then
  echo "Usage: $(basename $0) [find_args]"
  exit
fi

find . -type f \
\( \
     -name '*.c' \
  -o -name '*.cc' \
  -o -name '*.cpp' \
  -o -name '*.go' \
  -o -name '*.h' \
  -o -name '*.hpp' \
  -o -name '*.java' \
  -o -name '*.mk' \
  -o -name '*.py' \
  -o -name '*.rb' \
  -o -name '*.sh' \
  -o -name '*.swift' \
  -o -name 'Makefile' \
  -o -name 'pom.xml' \
\) "$@"
